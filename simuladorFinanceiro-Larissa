<script>

    function calculofinanceiro() {
        var estufas = Number(qtd_estufas.value);
        var coletas = Number(qtd_coletas.value);
        var valor = Number(valor_exame.value);
        var perdas = Number(perdas_mes.value);
        var avarias = (estufas * 0.15).toFixed(2);
        var obra = (estufas * 15).toFixed(2);
        var porcentagem = (perdas * 100 / coletas).toFixed(2);
        var sensor = (estufas * 60).toFixed(2);
        var instalacao = (sensor + obra + avarias);
        var placa = (coletas * 15).toFixed(2);
        var prejuizo = (perdas * valor).toFixed(2);
        var preju_ano = prejuizo * 12;




        div_info.innerHTML =
            `Olá <b>${nome.value}!</b> Seja bem vindo a <b>Labs System</b>. <br> 
     Verificamos que o percentual de perdas em placas bacterianas em seu laboratório é de <b>${porcentagem}%</b>, o que leva a <b>R$${prejuizo}</b> em prejuizos mensais.<br>
     Anualmente sua empresa chega a perder <b>R$${preju_ano}.</b><br><br>
     Com base nos dados da <b>ANVISA</b>, mais de <b>70%</b> de todas as perdas informadas são por conta da falta de controle de temperatura.<br>
     <b>Clique no Botão abaixo para ver como solucionar seu problema.</b><br><br><br>`

        orcamento_final.style.display = 'block';

    }


    function orcamento() {
        var estufas = Number(qtd_estufas.value);
        var coletas = Number(qtd_coletas.value);
        var valor = Number(valor_exame.value);
        var perdas = Number(perdas_mes.value);
        var avarias = estufas * 0.15;
        var obra = estufas * 15;
        var porcentagem = (perdas * 100 / coletas).toFixed(2);
        var sensor = estufas * 60;
        var instalacao = (sensor + obra + avarias).toFixed(2);
        var placa = (coletas * 15).toFixed(2);
        var prejuizo = (perdas * valor).toFixed(2);
        var preju_ano = (prejuizo * 12).toFixed(2);



        div_info2.innerHTML = `Nosso sistema tem como objetivo fornecer segurança e qualidade de temperatura em suas estufas, trazendo um lucro anual de <b>R$${prejuizo * 11}</b>.<br>
    <br>
     Com a instalação de nosso software você irá gastar apenas no dia da instalação <b>R$${instalacao}</b> e uma licença anual de <b>R$${prejuizo * 3}</b>.
     <b>Para saber mais entre em contato com nossa equipe! <br>contatolabs@system.com.br</b>
     `



    }

</script>


